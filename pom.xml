<name>MobileUI</name>

<description>MobileUI </description>

<author email="gustavo.gretter@mobileui.org" href="http://www.mobileui.org">Gustavo Gretter </author>

<!-- Customize your app and platform with the preference element. -->


<preference value="cli-9.0.0" name="phonegap-version"/>

<preference value="gradle" name="android-build-tool"/>

<preference value="portrait" name="orientation"/>

<preference value="false" name="fullscreen"/>

<preference value="0x000" name="BackgroundColor"/>

<preference value="none" name="permissions"/>

<!-- iOS only -->


<preference value="universal" name="target-device"/>

<preference value="true" name="detect-data-types"/>

<!-- ios: controls whether data types (such as phone no. and dates) are automatically turned into links by the system -->


<preference value="true" name="prerendered-icon"/>

<!-- ios: if icon is prerendered, iOS will not apply it's gloss to the app's icon on the user's home screen -->


<preference value="false" name="stay-in-webview"/>

<!-- ios: external links should open in the default browser, 'true' would use the webview the app lives in -->


<preference value="true" name="webviewbounce"/>

<!-- ios: control whether the screen 'bounces' when scrolled beyond the top -->


<preference value="false" name="exit-on-suspend"/>

<!-- ios: if set to true, app will terminate when home button is pressed -->


<preference value="true" name="AllowInlineMediaPlayback"/>

<!-- ios: Enable the html5 video tag -->


<preference value="true" name="WKWebViewOnly"/>


-<feature name="CDVWKWebViewEngine">

<param value="CDVWKWebViewEngine" name="ios-package"/>

</feature>

<preference value="CDVWKWebViewEngine" name="CordovaWebViewEngine"/>

<!-- Android only -->


<preference value="19" name="android-minSdkVersion"/>

<!-- android: MIN SDK version supported on the target device. MAX version is blank by default. -->


<preference value="28" name="android-targetSdkVersion"/>

<preference value="auto" name="android-installLocation"/>

<!-- android: app install location. 'auto' will choose. 'internalOnly' is device memory. 'preferExternal' is SDCard. -->


<preference value="stateUnspecified|adjustPan" name="android-windowSoftInputMode"/>

<!-- android: How the main window of the activity interacts with the window containing the on-screen soft keyboard -->


<access origin="*"/>

<allow-navigation href="*"/>

<allow-intent href="*"/>

<!-- Plugins -->


<plugin name="cordova-plugin-whitelist" spec="1.3.3"/>

<plugin name="cordova-plugin-vibration" spec="3.1.0"/>

<plugin name="cordova-plugin-dialogs" spec="2.0.1"/>

<plugin name="cordova-plugin-device" spec="2.0.2"/>

<plugin name="cordova-plugin-network-information" spec="2.0.1"/>

<plugin name="cordova-plugin-inappbrowser" spec="3.0.0"/>

<plugin name="cordova-plugin-x-toast" spec="2.7.2"/>

<plugin name="ionic-plugin-keyboard" spec="2.2.1"/>

<plugin name="cordova-plugin-file" spec="~6.0.1"/>

<plugin name="cordova-plugin-media" spec="5.0.2"/>

<plugin name="cordova-plugin-splashscreen" spec="5.0.2"/>

<preference value="true" name="ShowSplashScreenSpinner"/>

<!-- ios: if set to false, the spinner won't appear on the splash screen during app loading -->


<preference value="false" name="AutoHideSplashScreen"/>

<preference value="3000" name="SplashScreenDelay"/>

<preference value="false" name="FadeSplashScreen"/>

<preference value="false" name="ShowSplashScreenSpinner"/>

<plugin name="cordova-plugin-statusbar" spec="2.4.2"/>

<preference value="false" name="StatusBarOverlaysWebView"/>

<preference value="#000000" name="StatusBarBackgroundColor"/>

<preference value="lightcontent" name="StatusBarStyle"/>

<plugin name="cordova-plugin-actionsheet" spec="2.3.3"/>

<plugin name="cordova-plugin-wkwebview-engine"/>

